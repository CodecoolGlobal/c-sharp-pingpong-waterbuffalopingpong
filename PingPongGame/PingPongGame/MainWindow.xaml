<Window x:Class="PingPongGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPongGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="playground">
        <Canvas>
            <Rectangle x:Name="racket" Height="16" Margin="0,375,0,0" Stroke="Black" Width="126" Fill="#FF0EDF11" Canvas.Left="337" Canvas.Top="10"/>
            <Rectangle x:Name="ball" HorizontalAlignment="Left" Height="30" Margin="119,116,0,0" Stroke="Black" VerticalAlignment="Top" Width="30" Fill="Red"/>
        </Canvas>
    </Grid>
</Window>
