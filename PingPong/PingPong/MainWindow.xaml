<Window x:Class="PingPong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Window_KeyDown">
    <Grid>
        <Grid x:Name="PopUpMenu" HorizontalAlignment="Center" Height="100" Margin="0" VerticalAlignment="Center" Width="250" Visibility="Hidden">
            <Label Content="Are you sure to quit from the best game ever?" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" Margin="0"/>
            <Button x:Name="YesButton" Content="Yes" RenderTransformOrigin="-1.176,6.435" Margin="0,70,160,10" Click="YesButton_Click" Width="90" Height="20"/>
            <Button x:Name="NoButton" Content="Hell NO" RenderTransformOrigin="-1.176,6.435" Margin="160,70,0,10" Click="NoButton_Click" Width="90" Height="20"/>
        </Grid>
    </Grid>
</Window>
